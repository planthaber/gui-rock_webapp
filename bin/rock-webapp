#! /usr/bin/env ruby

require 'eventmachine'
require 'rack'
require 'thin'
require 'orocos'
require 'rack/static'
require 'rock/webapp/tasks/tasks'

thin_host = '0.0.0.0'
thin_port = 9292
name_server_host = 'localhost'
cors_hosts = []
syskit = false

options = OptionParser.new do |opt|
    opt.on('--host host', String, 'the host of the name server that should be contacted (default to localhost)') do |host|
        name_server_host = host
    end
    opt.on('--bind host', String, 'the host the server should bind to (default to 0.0.0.0)') do |host|
        thin_host = host
    end
    opt.on('--port port', Integer, "the server's port (default to #{thin_port})") do |port|
        thin_port = port
    end
    opt.on('--enable-cors hosts', Array, "enables Cross-Origin Resource Sharing for sites loaded from the parameter may include localhost host:port, file://. Also multiple values seperated by ','") do |host|
        cors_hosts = host
    end
    opt.on('--enable-syskit',"load syskit support") do
        syskit=true
    end
end
options.parse ARGV


Faye::WebSocket.load_adapter('thin')
thin = Rack::Handler.get('thin')
EM.next_tick { Rock::WebApp::Tasks.install_event_loop }

if syskit
    #included roby app changes a log path, must be included before Orocos.initialize
    require 'rock/webapp/syskit/syskit'
    EM.next_tick { Rock::WebApp::Syskit.install_event_loop }
end

Orocos::CORBA.name_service.ip = name_server_host
Orocos.initialize

        
APP_DIR = File.expand_path(File.dirname(__FILE__))
UI_DIR = File.join(APP_DIR, '..','www')
    
app = Rack::Builder.new do
    
    #map html uis
    
    #map welcome page
    map '/' do
        run Rack::File.new(File.join(UI_DIR, 'index.html'))
    end
    
    map '/html' do
        run Rack::Directory.new(File.join(UI_DIR, 'html'))
    end
    
    #map all uis
    map '/ui' do
        run Rack::Directory.new(UI_DIR)
    end
    
    #mal additional custom uis
    if defined? Rock::WebApp::UI_CUSTOM_DIR
        map '/ui/tasks/custom' do
            run Rack::Directory.new(Rock::WebApp::Tasks::UI_CUSTOM_DIR)
        end
    end
    
    
    #map the apis
    
    map '/api/tasks' do
        if !cors_hosts.empty?
            require 'rack/cors'
            use Rack::Cors do
                allow do
                    origins(*cors_hosts)
                    resource '*', headers: :any, methods: [:get, :post]
                end
            end
        end
        run Rock::WebApp::Tasks::Root
    end
    
    if syskit      
        map '/api/syskit' do
            if !cors_hosts.empty?
                require 'rack/cors'
                use Rack::Cors do
                    allow do
                        origins(*cors_hosts)
                        resource '*', headers: :any, methods: [:get, :post]
                    end
                end
            end
            run Rock::WebApp::Syskit::Root
        end
    end
end
thin.run(app, Host: thin_host, Port: thin_port)

